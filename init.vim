" 根据编辑的文件自动切换工作目录
set autochdir
" 显示行号
set number
" 显示动态行号
set relativenumber
" 高亮光标所在行
set cursorline
hi CursorLine ctermbg=DarkGray
" 将Tab转为空格
set expandtab
" Tab缩进空格数
set tabstop=4
" 自动缩进数
set shiftwidth=4
set softtabstop=4
" 智能缩进
set smartindent
" 设置空白字符的视觉提示
set list
set listchars=tab:▸\ ,trail:▫
" 滚动屏幕时锁定光标行位置
set scrolloff=5
" 搜索时忽略大小写
set ignorecase
" 智能大小写匹配
set smartcase
" 缩进折叠方法
set foldmethod=indent
